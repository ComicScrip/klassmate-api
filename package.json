{
  "name": "klassmate-api",
  "version": "0.0.1",
  "description": "An API to manage eductional activities remotely",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "start:watch": "nodemon app.js",
    "dev": "npm-run-all migrate:dev start:watch",
    "reset-db": "npx prisma migrate reset",
    "migrate:dev": "npx prisma migrate dev",
    "migrate:test": "dotenv -- cross-var \"DATABASE_URL=%DATABASE_URL_TEST% npx prisma migrate deploy\"",
    "test": "NODE_ENV=test npm-run-all migrate:test test:run",
    "test:run": "jest --testRunner='jest-circus/runner' --maxWorkers=1 --detectOpenHandles",
    "test:watch": "jest --testRunner='jest-circus/runner' --maxWorkers=1 --watch --detectOpenHandles",
    "testing": "dotenv -- cross-var \"DATABASE_URL=%DATABASE_URL_TEST% npm run test\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ComicScrip/klassmate-api.git"
  },
  "author": "Pierre Genthon",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ComicScrip/klassmate-api/issues"
  },
  "homepage": "https://github.com/ComicScrip/klassmate-api#readme",
  "dependencies": {
    "@prisma/client": "2.23.0",
    "argon2": "^0.27.2",
    "cors": "^2.8.5",
    "cross-var": "^1.1.0",
    "dotenv": "^8.2.0",
    "dotenv-cli": "3.0.0",
    "express": "^4.17.1",
    "joi": "^17.4.0",
    "npm-run-all": "^4.1.5",
    "prisma": "2.23.0"
  },
  "devDependencies": {
    "eslint": "^7.24.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.5",
    "faker": "^5.5.3",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setupTests.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
